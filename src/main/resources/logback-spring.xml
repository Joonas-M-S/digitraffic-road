<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <!-- Log message format -->
        <encoder>
            <!-- If needed to exclude stacktrace put %xEx{0} at the end of the pattern -->
            <pattern>%d{ISO8601} %p&#9;[%t] - %c: %m%n</pattern>
        </encoder>
    </appender>


    <appender name="FILE_LOGSTASH" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>info</level>
        </filter>
        <file>metadata-logstash.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>metadata-logstash.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <maxHistory>2</maxHistory>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder" />
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- File to write to before rotating. See: http://logback.qos.ch/manual/appenders.html#tbrpFileNamePattern -->
        <file>metadata-daily.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>metadata-daily.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <maxHistory>92</maxHistory>
        </rollingPolicy>
        <encoder>
            <!-- If needed to exclude stacktrace put %xEx{0} at the end of the pattern
                 Useful if logged only oneliners to one file and full straces to other -->
            <pattern>%d{ISO8601} %p&#9;[%t] - %c: %m%n</pattern>
        </encoder>
    </appender>

    <!-- JMS message logging in separate file -->
    <appender name="FILE_JMS" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- File to write to before rotating. See: http://logback.qos.ch/manual/appenders.html#tbrpFileNamePattern -->
        <file>metadata-jms-daily.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>metadata-jms-daily.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <maxHistory>14</maxHistory>
        </rollingPolicy>
        <encoder>
            <!-- If needed to exclude stacktrace put %xEx{0} at the end of the pattern
                 Useful if logged only oneliners to one file and full straces to other -->
            <pattern>%d{ISO8601} %p&#9;[%t] - %c: %m%n</pattern>
        </encoder>
    </appender>

    <!-- PerformanceMonitor messages logging in separate file -->
    <appender name="FILE_PERFORMANCE_MONITOR" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- File to write to before rotating. See: http://logback.qos.ch/manual/appenders.html#tbrpFileNamePattern -->
        <file>metadata-performance-daily.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>metadata-performance-daily.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <maxHistory>92</maxHistory>
        </rollingPolicy>
        <encoder>
            <!-- If needed to exclude stacktrace put %xEx{0} at the end of the pattern
                 Useful if logged only oneliners to one file and full straces to other -->
            <pattern>%d{ISO8601} %p&#9;[%t] - %c: %m%n</pattern>
        </encoder>
    </appender>

    <!-- TMS and weather sensors data -->
    <logger name="fi.livi.digitraffic.tie.data.service.SensorDataUpdateService" additivity="true">
        <appender-ref ref="FILE_JMS" />
    </logger>
    <logger name="fi.livi.digitraffic.tie.data.service.SensorDataUpdateService" additivity="false">
        <appender-ref ref="FILE_LOGSTASH" />
    </logger>


    <!-- JMS message listener -->
    <logger name="fi.livi.digitraffic.tie.data.jms" additivity="true">
        <appender-ref ref="FILE_JMS" />
    </logger>
    <logger name="fi.livi.digitraffic.tie.data.jms" additivity="false">
        <appender-ref ref="FILE_LOGSTASH" />
    </logger>

    <!-- JMS message configuration -->
    <logger name="fi.livi.digitraffic.tie.conf.jms" additivity="true">
        <appender-ref ref="FILE_JMS" />
    </logger>
    <logger name="fi.livi.digitraffic.tie.conf.jms" additivity="false">
        <appender-ref ref="FILE_LOGSTASH" />
    </logger>

    <logger name="fi.livi.digitraffic.tie.data.dao.SensorValueDao" additivity="true">
        <appender-ref ref="FILE_JMS" />
    </logger>
    <logger name="fi.livi.digitraffic.tie.data.dao.SensorValueDao" additivity="false">
        <appender-ref ref="FILE_LOGSTASH" />
    </logger>

    <!-- Camera presets images -->
    <logger name="fi.livi.digitraffic.tie.data.service.CameraImageUpdateService" additivity="true">
        <appender-ref ref="FILE_JMS" />
    </logger>
    <logger name="fi.livi.digitraffic.tie.data.service.CameraImageUpdateService" additivity="false">
        <appender-ref ref="FILE_LOGSTASH" />
    </logger>

    <!-- Camera presets data -->
    <logger name="fi.livi.digitraffic.tie.data.service.CameraDataUpdateService" additivity="true">
        <appender-ref ref="FILE_JMS" />
    </logger>
    <logger name="fi.livi.digitraffic.tie.data.service.CameraDataUpdateService" additivity="false">
        <appender-ref ref="FILE_LOGSTASH" />
    </logger>

    <!-- debugging log -->
    <logger name="net.bull.javamelody" additivity="false">
        <level value="ERROR" />
        <appender-ref ref="FILE_LOGSTASH" />
    </logger>
    <logger name="net.bull.javamelody" additivity="false">
        <level value="INFO" />
    </logger>

    <!-- PerformanceMonitorAspect log -->
    <logger name="PerformanceMonitor" additivity="true">
        <appender-ref ref="FILE_PERFORMANCE_MONITOR" />
    </logger>
    <logger name="PerformanceMonitor" additivity="false">
        <appender-ref ref="FILE_LOGSTASH" />
    </logger>

    <root level="INFO" additivity="false">
        <appender-ref ref="FILE" />
        <appender-ref ref="FILE_LOGSTASH" />

        <springProfile name="localhost">
            <appender-ref ref="CONSOLE" />
        </springProfile>
    </root>

</configuration>
